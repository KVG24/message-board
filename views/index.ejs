<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles.css" />
        <title>Message Board</title>
    </head>
    <body>
        <h1>Message Board</h1>
        <a href="/new">Add message</a>
        <% messages.forEach((message) => { %>
        <div>
            <h3><%= message.user %></h3>
            <p><%= message.text %></p>
            <p><%= formatDate(message.added) %></p>
        </div>
        <% }) %>
    </body>
</html>
